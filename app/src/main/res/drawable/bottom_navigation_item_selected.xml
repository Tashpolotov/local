<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bottom_navigation_selected_background_color" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Stroke (Border) -->
    <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:color="@color/bottom_navigation_border_color" android:width="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>